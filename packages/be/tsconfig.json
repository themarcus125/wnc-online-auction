{
  "compilerOptions": {
    "sourceMap": true,
    "incremental": true,   
    "declaration": true, 
    "removeComments": true,  
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*" : ["./*"]
    },    
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "exclude": [
      "node_modules",
      "dist",
    ],
    "include": [
      "**/*"
    ]
  }
}
