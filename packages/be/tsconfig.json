{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "strict": true,
    "lib": [
      "esnext"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "**/*.ts"
  ]
}